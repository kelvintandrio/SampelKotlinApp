<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DetailMatchActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

        <ImageView
                android:id="@+id/add_to_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_to_favorite"
                android:background="#5F8A0F"
                tools:ignore="ContentDescription"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5F8A0F"
                tools:ignore="UselessParent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/rounded_white"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_pertandingan"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:id="@+id/nameMatch"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_file_pertandingan"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:id="@+id/nameFileMatch"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/piala"
                            android:layout_weight="0.33"
                            tools:ignore="ContentDescription"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/_1_1"
                            android:layout_weight="0.33"
                            android:textColor="@android:color/black"
                            android:textAlignment="center"
                            android:textSize="48sp"
                            android:id="@+id/skorMatch"
                            android:layout_gravity="center"/>

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/piala"
                            android:layout_weight="0.33"
                            tools:ignore="ContentDescription"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nama_tim"
                            android:textColor="@android:color/black"
                            android:textAlignment="center"
                            android:layout_weight="0.33"
                            android:id="@+id/nameTim1"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nama_tim"
                            android:textColor="@android:color/black"
                            android:textAlignment="center"
                            android:layout_weight="0.33"
                            android:id="@+id/nameTim2"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_pertandingan"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:id="@+id/nameDetailMatch"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_file_pertandingan"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:id="@+id/nameDetailFileMatch"/>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/logoDetailMatch"
                        android:layout_margin="16dp"
                        tools:ignore="ContentDescription"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:id="@+id/roundDetailMatch"
                        android:text="@string/round"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:id="@+id/dateDetailMatch"
                        android:textStyle="normal"
                        android:text="@string/date"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:background="@drawable/ic_line"
                            android:id="@+id/nameTeam1"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:textAlignment="center"
                            android:text="@string/nama_tim"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:textAlignment="textEnd"
                            android:id="@+id/nameTeam2"
                            android:layout_weight="0.33"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:id="@+id/scoreTeam1"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:textAlignment="center"
                            android:text="@string/score"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:textAlignment="textEnd"
                            android:id="@+id/scoreTeam2"
                            android:layout_weight="0.33"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:id="@+id/shotTeam1"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:textAlignment="center"
                            android:text="@string/shot"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:id="@+id/shotTeam2"
                            android:textAlignment="textEnd"
                            android:layout_weight="0.33"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:id="@+id/formationTeam1"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:textAlignment="center"
                            android:text="@string/formation"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:textAlignment="textEnd"
                            android:id="@+id/formationTeam2"
                            android:layout_weight="0.33"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:id="@+id/goalDetailTeam1"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_line"
                            android:textAlignment="center"
                            android:text="@string/goal_detail"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:id="@+id/goalTeam2"
                            android:textAlignment="textEnd"
                            android:layout_weight="0.33"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:id="@+id/yelloCardTeam1"
                            android:textStyle="normal"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_line"
                            android:textAlignment="center"
                            android:text="@string/yellow_card"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:textAlignment="textEnd"
                            android:id="@+id/yelloCardTeam2"
                            android:layout_weight="0.33"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:id="@+id/redCardTeam1"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_line"
                            android:textAlignment="center"
                            android:text="@string/red_card"
                            android:layout_weight="0.33"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:background="@drawable/ic_line"
                            android:textStyle="normal"
                            android:textAlignment="textEnd"
                            android:id="@+id/redCardTeam2"
                            android:layout_weight="0.33"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>